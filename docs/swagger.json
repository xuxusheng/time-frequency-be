{
    "swagger": "2.0",
    "info": {
        "title": "时频培训系统 API 接口文档",
        "contact": {
            "name": "许盛",
            "email": "20691718@qq.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "paths": {
        "/api/v1/admin/create-user": {
            "post": {
                "description": "管理员创建新用户账号，可以指定用户角色和是否为管理员账户",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "创建新用户",
                "parameters": [
                    {
                        "description": "用户名，建议使用姓名拼音",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "用户昵称，请使用真实姓名",
                        "name": "nick_name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "手机号",
                        "name": "phone",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "邮箱",
                        "name": "email",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "密码",
                        "name": "password",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "enum": [
                            "student",
                            "teacher"
                        ],
                        "description": "用户角色，student 学生或 teacher 老师",
                        "name": "role",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "是否是管理员",
                        "name": "is_admin",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/swagger.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.User"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/api/v1/admin/list-user": {
            "post": {
                "description": "管理员查询所有的用户账号",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "查询多个用户",
                "parameters": [
                    {
                        "description": "模糊匹配用户名、昵称、手机号和邮箱",
                        "name": "query",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "enum": [
                            "student",
                            "teacher"
                        ],
                        "description": "通过角色筛选老师或者学生",
                        "name": "role",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "enum": [
                            -1,
                            0,
                            1
                        ],
                        "description": "筛选是否是管理员，-1 不限、0 否、1 是",
                        "name": "is_admin",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "description": "pn",
                        "name": "pn",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "description": "ps",
                        "name": "ps",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/swagger.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/definitions/swagger.DWithP"
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "$ref": "#/definitions/model.User"
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/api/v1/admin/toggle-admin": {
            "post": {
                "description": "修改某个用户是否是管理员，不允许取消自己的管理员权限",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "修改账号管理员权限",
                "parameters": [
                    {
                        "description": "用户ID",
                        "name": "id",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "description": "是否管理员",
                        "name": "is_admin",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/swagger.Resp"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.User": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "description": "邮箱",
                    "type": "string"
                },
                "id": {
                    "description": "--- 通用字段 ---",
                    "type": "integer"
                },
                "is_admin": {
                    "type": "boolean"
                },
                "name": {
                    "description": "--- 业务字段 ---",
                    "type": "string"
                },
                "nick_name": {
                    "type": "string"
                },
                "phone": {
                    "description": "手机号",
                    "type": "string"
                },
                "role": {
                    "description": "用户角色，teacher 老师，student 学生",
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "swagger.DWithP": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object"
                },
                "pn": {
                    "description": "当前页码",
                    "type": "integer",
                    "example": 1
                },
                "ps": {
                    "description": "每页显示多少条记录",
                    "type": "integer",
                    "example": 10
                },
                "total": {
                    "description": "总共多少条记录",
                    "type": "integer",
                    "example": 199
                }
            }
        },
        "swagger.Resp": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object"
                },
                "err_code": {
                    "description": "错误码",
                    "type": "integer",
                    "example": 0
                },
                "err_debugs": {
                    "description": "错误调式信息",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "err_details": {
                    "description": "错误详细信息",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "err_msg": {
                    "description": "错误信息",
                    "type": "string"
                }
            }
        }
    }
}